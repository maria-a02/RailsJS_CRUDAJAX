<%= form_with(model: @tweet, remote: true) do |f| %>
    <% if @tweet.errors.any? %>
        <div id = 'error_explanation'>
            <h2>Este tuit no se pudo crear por las siguientes razones</h2>
            <ul>
                <% @tweet.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :title, "Pegaá tu título" %>
        <%= f.text_field :title, class: 'form-control'%>
    </div>

    <div class="form-group">
        <%= f.label :content, "Ponéle color" %>
        <%= f.text_field :content, class: 'form-control'%>
    </div>

    <div class = 'actions'>
        <%= f.submit 'Crear tweet', data: { disable_with: "Creando tweet..." }  %>
    </div>
<% end %>